/* pages/home/home.wxss */
.table {
  height: 1000rpx;
  color: black;
  line-height: 80rpx;
  text-align: center;
}

.heard{
  display: flex;
  align-items: center;
  width: 100%;
  height: 80rpx;
  background: #009999;
}

.heard-location {
  position: relative;
  font-size: 25rpx;
  padding: 5rpx 15rpx;
  margin: 10rpx;
  width: 250rpx;
  height: 40rpx;
  background: #009999;
  color: white;
  border-radius: 20rpx;
}

.heard-location-icon{
  position: absolute;
  top: 12rpx;
  height: 25rpx;
  width: 25rpx;
}

.heard-location-text{
  position: absolute;
  left: 47rpx;
  top: 9rpx;
  height: 30rpx;
  width: 190rpx;
  white-space:nowrap;
  overflow:hidden; /*超出一行文字自动隐藏*/
  text-overflow:ellipsis;/*文字隐藏后添加省略号*/
}

.heard .search-input {
  width: 56%;
  height: 50rpx;
  padding-left: 20rpx;
  background: #EFEFF5;
  border-radius: 10rpx;
  color: #6D6D6D;
  text-align: left;
  font-size: 25rpx;
}

.result-container {
  position: fixed;
  top: 90rpx;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1000;
  background: white;
}

.search-result-list {
  padding: 20rpx;
  height: 100%;
}

.search-result {
  line-height: 40rpx;
  height: 90rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #ECECEC;
}

.search-result-desc {
  line-height: 35rpx;
  color: #AAAAAA;
  font-size: 24rpx;
}