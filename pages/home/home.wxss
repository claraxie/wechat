/* pages/home/home.wxss */
.table {
  height: 1000rpx;
  color: black;
  line-height: 80rpx;
  text-align: center;
}

.heard{
  display: flex;
  width: 100%;
  height: 80rpx;
  background: #009999;
}

.heard-location {
  position: relative;
  font-size: 25rpx;
  padding: 5rpx 15rpx;
  margin: 10rpx;
  width: 250rpx;
  height: 40rpx;
  background: #009999;
  color: white;
  border-radius: 20rpx;
}

.heard-location-icon{
  position: absolute;
  top: 12rpx;
  height: 25rpx;
  width: 25rpx;
}

.heard-location-text{
  position: absolute;
  left: 47rpx;
  top: 9rpx;
  height: 30rpx;
  width: 190rpx;
  white-space:nowrap;
  text-overflow: ellipsis;
}