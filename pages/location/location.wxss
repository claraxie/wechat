/* pages/location/location.wxss */
.header {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  font-size: 28rpx;
  padding: 15rpx 20rpx;
  line-height: 60rpx;
  border-bottom: 20rpx solid #F4F4F4;
}

.header .search-input {
  width: 70%;
  height: 60rpx;
  padding-left: 20rpx;
  background: #EFEFF5;
  border-radius: 10rpx;
  color: #6D6D6D;
}

.header .search-btn {
  width: 30%;
  text-align: center;
  margin-left: 20rpx;
  background: #AAAAAA;
  border-radius: 10rpx;
  color: #EBEBEB;
}

.getLocation{
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-bottom: 20rpx solid #F4F4F4;
}

.result-container {
  position: fixed;
  top: 90rpx;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: 1000;
  background: white;
}

.search-result-list {
  padding: 20rpx;
  height: 100%;
}

.search-result {
  line-height: 40rpx;
  height: 90rpx;
  font-size: 26rpx;
  border-bottom: 1rpx solid #ECECEC;
}

.search-result-desc {
  line-height: 35rpx;
  color: #AAAAAA;
  font-size: 24rpx;
}

.addLocation{
  position: relative;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 15rpx;
}

.addLocation-icon{
  width: 30rpx;
  line-height: 27rpx;
  height: 30rpx;
  text-align: center;
  position: absolute;
  right: 15rpx;
  top: 20rpx;
  border-radius: 30rpx; 
  color: #009999;
  border:2px solid #009999;
}

.myLocation {
  background: #F4F4F4;
  height: 100rpx;
  padding-left: 15rpx;
  line-height: 130rpx;
  font-size: 26rpx;
}

.locationList {
  padding: 15rpx;
}

.locationInfo {
  font-size: 24rpx;
  height: 100rpx;
  line-height: 60rpx;
  border-bottom: 2rpx solid #FFCC33;
}

.locationInfo-desc {
  height: 90rpx;
  line-height: 50rpx;
}